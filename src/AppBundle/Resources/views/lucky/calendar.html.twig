					<td colspan="{{ startDow }}"></td>
				{% endif %}
				<td>
					<div>
						<div>{{ day }}</div>
						<div>
						 {# day content here #}
                                                  {{ include('AppBundle:lucky:day.html.twig', { 'day': day }) }}
						</div>
					</div>
				</td>
				{% if loop.last and dow != 6 %}
					<td colspan="{{ 6 - dow }}">&nbsp;</td>
				{% endif %}
				{% if dow == 6 %}
					{% set dow = 0 %}
				</tr>
				<tr>
				{% else %}
					{% set dow = dow + 1 %}
				{% endif %}
			{% endfor %}
			</tr>
